<Window x:Name="GOT_Quotes" x:Class="GOTQuotes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GOTQuotes"
        mc:Ignorable="d"
        Title="GOT Quotes?" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="667*"/>
            <ColumnDefinition Width="125*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="https://awakenthegreatnesswithin.com/wp-content/uploads/2016/05/HT.jpg" Stretch="UniformToFill"/>
        </Grid.Background>
        <TextBlock x:Name="quote" Margin="541,10,10,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="244" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
